# =============================================================
# MIBSP - Municipal Integrity & Bribe-Free Service Portal
# Environment Configuration Template
# Copy this file to .env and fill in your values
# =============================================================

# ─── Application ────────────────────────────────────────────
FLASK_ENV=development
SECRET_KEY=replace-with-secrets-token-hex-32-generate-new

# ─── MySQL (VPS Production) ─────────────────────────────────
MYSQL_HOST=localhost
MYSQL_USER=mibsp_user
MYSQL_PASSWORD=Akash56561.
MYSQL_DB=mibsp

# ─── PostgreSQL (Render — auto-set by platform) ─────────────
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# ─── File Uploads ───────────────────────────────────────────
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# ─── Redis / Celery (Optional - for notifications) ──────────
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ─── Email Notifications (Optional) ─────────────────────────
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ─── Security Settings ──────────────────────────────────────
SESSION_LIFETIME_HOURS=8
BCRYPT_LOG_ROUNDS=12

# ─── Admin Defaults (Change after first login!) ─────────────
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=Admin@1234
